<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>登入 Dashboard</title>
  <script src="https://accounts.google.com/gsi/client?onload=initGoogle" async defer></script>
  <style>
    body {
      margin: 0;
      background: #f5f5f5;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: "Segoe UI", sans-serif;
      color: #111827;
    }
    .box {
      background: white;
      padding: 40px 50px;
      border-radius: 18px;
      box-shadow: 0 20px 60px rgba(15, 23, 42, 0.12);
      text-align: center;
      width: min(360px, 90vw);
    }
    .subtitle {
      font-size: 14px;
      color: #6b7280;
      margin-bottom: 24px;
    }
    #login-message {
      margin-top: 16px;
      font-size: 14px;
    }
  </style>
</head>

<body>

  <div class="box">
    <h1 style="margin-bottom:8px;">Dashboard</h1>
    <p class="subtitle">使用 Google 帳戶快速登入</p>
    <div id="google-signin"></div>
    <div id="login-message"></div>
  </div>

  <script type="module">
    import { apiPost } from "./js/api.js";

    const GOOGLE_CLIENT_ID = "777320476444-89anlckf3uipogs3h9isg4tkr347ap6u.apps.googleusercontent.com";
    const isLocalhost = window.location.hostname.includes("127.0.0.1") || window.location.hostname.includes("localhost");
    const API_BASE = isLocalhost
      ? "http://localhost:3000"
      : "https://trading-app-backend-production-3b40.up.railway.app";

    const messageEl = document.getElementById("login-message");

    function setMessage(text, type = "info") {
      messageEl.textContent = text;
      messageEl.style.color = type === "error" ? "#dc2626" : "#16a34a";
    }

    async function handleLoginResponse(idToken) {
      try {
        setMessage("登入中...", "info");
        const data = await apiPost("/auth/google", { idToken });
        const profile = {
          username: data.user?.email?.split("@")[0] || "user",
          email: data.user?.email,
          uid: data.user?.id,
          googleId: data.user?.google_id
        };
        localStorage.setItem("token", data.token);
        localStorage.setItem("authUser", JSON.stringify(profile));
        window.location.href = "index.html";
      } catch (err) {
        console.error(err);
        setMessage("Google 登入失敗，請稍後再試", "error");
      }
    }

    window.handleCredentialResponse = response => {
      if (response.credential) {
        handleLoginResponse(response.credential);
      }
    };

    window.addEventListener("load", () => {
      google.accounts.id.initialize({
        client_id: GOOGLE_CLIENT_ID,
        callback: window.handleCredentialResponse
      });
      google.accounts.id.renderButton(document.getElementById("google-signin"), {
        theme: "outline",
        size: "large",
        width: "240"
      });
      google.accounts.id.prompt();
    });
    window.handleCredentialResponse = response => {
    if (response.credential) {
      handleLoginResponse(response.credential);
    }
  };

  window.initGoogle = function() {
    google.accounts.id.initialize({
      client_id: GOOGLE_CLIENT_ID,
      callback: window.handleCredentialResponse
    });
    google.accounts.id.renderButton(
      document.getElementById("google-signin"),
      { theme: "outline", size: "large" }
    );
    google.accounts.id.prompt();
  };
</script></body>
</html>


